<div class="relative flex items-center space-x-4 p-4 bg-gray-100 rounded-lg shadow-md">
  <div class="flex-shrink-0">
    <img class="h-12 w-12 rounded-full" src="{{ ship.image }}" alt="{{ ship.name }}">
  </div>
  <div>
    <div class="text-lg font-medium text-gray-900">{{ ship.name }}</div>
    <div class="text-sm text-gray-500">{{ ship.description }}</div>
  </div>
  <div class="ml-auto">
    <button class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      View Details
    </button>
  </div>
</div>
<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('shipComponent', () => ({
      animate() {
        anime({
          targets: '.ship-component',
          translateX: [0, 50],
          direction: 'alternate',
          easing: 'easeInOutQuad',
          duration: 800
        });
      }
    }));
  });
</script>